<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!-- Ears -->
	<GeneDef ParentName="GeneEarsBase">
		<defName>VRE_SerratedEars</defName>
		<label>serrated ears</label>
		<selectionWeight>0</selectionWeight>
		<description>Carriers of this gene have long, serrated ears.</description>
		<iconPath>UI/Icons/Genes/Gene_EarSerrated</iconPath>
		<graphicData>
			<graphicPath>Things/Pawn/Humanlike/HeadAttachments/SerratedEars/SerratedEars</graphicPath>
			 <colorType>Skin</colorType>
		</graphicData>
		
	</GeneDef>
	
	<!-- Misc -->
	
	<GeneDef>
		<defName>VRE_FacialSpots</defName>
		<label>facial spots</label>
		
		<description>Carriers of this gene have small pigmentation spots on their face.</description>
		<biostatCpx>1</biostatCpx>
		
		<iconPath>UI/Icons/Genes/Gene_FacialSpots</iconPath>
		<graphicData>
			<graphicPaths>
				<li>Things/Pawn/Humanlike/HeadAttachments/FacialSpots/FacialSpotsA</li>
				<li>Things/Pawn/Humanlike/HeadAttachments/FacialSpots/FacialSpotsB</li>
				<li>Things/Pawn/Humanlike/HeadAttachments/FacialSpots/FacialSpotsC</li>
			</graphicPaths>
			 <drawOffset>(0, -0.002, 0)</drawOffset>
			<layer>PostSkin</layer>
			<drawLoc>HeadMiddle</drawLoc>
			<colorType>Skin</colorType>
			<useSkinShader>true</useSkinShader>
		</graphicData>
		
	</GeneDef>
	
	<!-- Hair -->
	
	<GeneDef ParentName="GeneHairStyleBase">
		<defName>VRE_DreadHair</defName>
		<label>dread hair</label>
		<description>Carriers of this gene grow hair that naturally forms thick dreadlocks.</description>
		<iconPath>UI/Icons/Genes/Gene_DreadHair</iconPath>
		<hairTagFilter>
			<whitelist>true</whitelist>
			<tags>
				<li>VRE_ArchonHairs</li>
			</tags>
		</hairTagFilter>
	</GeneDef>
	
	
	
	
</Defs>